    $(".tableStyle").live('click', function () {

        if ($(this).attr("src").toString().indexOf('imagine1.png') != -1) {

            this.src = this.src.replace("imagine1.png", "imagine2.png");

        }

        else {

            this.src = this.src.replace("imagine2.png", "imagine1.png");

        }

    });
</script>
