@model IEnumerable<MvcTask.Models.ListGen>

@helper Truncate(string input, int length)
{
      if (input.Length <= length) {
           @input
      } else {
           @input.Substring(0, length)<text>...</text>
      }
}


@{
ViewBag.Title = "Storeeee";
 }


<h2>Index</h2>

<p> @Html.ActionLink("Create New", "Create")
</p>

<table>
 <tr>
    <th>
       Name
     </th>
    <th>
     Description
    </th>
     <th>
         Number of Taks
     </th>
  </tr>
@foreach (var item in Model) {
  <tr>
 <td> 
    @Truncate(item.Name, 25)
 </td>
<td>
     @Truncate(item.Description, 25)
 </td>
      <td>
            
            @Html.DisplayFor(modelItem => item.Tasks.Count)
        
        </td>
      
      <th></th>
 <td>
     @Html.ActionLink("Edit", "Edit", new { listId=item.ListGenId }) | @Html.ActionLink("Delete", "Delete", new { id = item.ListGenId }) |  @Html.ActionLink("DeleteAll", "DeleteAll", new { id = item.ListGenId })
 </td>
 </tr>
}
</table>