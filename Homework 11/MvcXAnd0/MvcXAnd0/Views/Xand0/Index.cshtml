@model MvcXAnd0.Models.Coord

@using MvcXAnd0.Models;

@{
    ViewBag.Title = "Index";
}

<h1>Play X and 0</h1>
<header>
    <meta name="viewport" content="width-device-width" />
</header>
<div>
    <table border="1">
        @for (int i = 0; i < 3; i++)
        {
          <tr>
              @for (int j = 0; j < 3; j++)
              {
                  <td style="width: 60px; height: 60px;"></td>
                //<td class="myCell"></td>
              }

          </tr>
         
        }


    </table>


</div>
Select coordinates:
 </div>
@using (Html.BeginForm()) {
  
        <div>
            X Coordinates:
         @Html.DropDownListFor(model => model.CoordX, Enumerable.Range(0,3).Select( x => new SelectListItem { Text = x.ToString() }))
        </div>
    
        <div>
            Y Coordinates:
        @Html.DropDownListFor(model => model.CoordY, Enumerable.Range(0,3).Select( x => new SelectListItem { Text = x.ToString() }))
        </div>
    
       

        <p>
            <input  id="new" type="submit" value="Submit" />
        </p>
       
    
}
